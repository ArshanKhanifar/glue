{
	"name": "@arshan/forknet-glue",
	"version": "0.0.1",
	"description": "",
	"private": false,
	"repository": {
		"type": "git",
		"url": ""
	},
	"type": "module",
	"bin": "./dist/index.js",
	"files": [
		"dist"
	],
	"scripts": {
		"build": "tsup src/index.ts --format esm --clean --minify --metafile",
		"changeset": "changeset",
		"dev": "tsup src/index.ts --format esm --watch --clean --onSuccess \"node dist/index.js\"",
		"prepare": "husky install",
		"release": "changeset publish",
		"test": "vitest",
		"publish:package": "pnpm run build && pnpm pack && pnpm publish"
	},
	"lint-staged": {
		"*.{js,jsx,ts,tsx}": [
			"eslint --fix",
			"prettier --write"
		],
		"*.{md,mdx,yml,json}": [
			"prettier --write"
		]
	},
	"dependencies": {
		"@wagmi/core": "^1.4.6",
		"chalk": "^5.2.0",
		"commander": "^9.5.0",
		"dotenv": "^16.3.1",
		"figlet": "^1.5.2",
		"ora": "^6.1.2",
		"tsup": "^7.2.0",
		"viem": "^1.18.9"
	},
	"devDependencies": {
		"@changesets/cli": "^2.26.0",
		"@commitlint/cli": "^17.4.1",
		"@commitlint/config-conventional": "^17.4.0",
		"@trivago/prettier-plugin-sort-imports": "^4.0.0",
		"@types/figlet": "^1.5.5",
		"@types/node": "^18.11.18",
		"@typescript-eslint/eslint-plugin": "^5.48.1",
		"@typescript-eslint/parser": "^5.48.1",
		"eslint": "^8.31.0",
		"eslint-config-prettier": "^8.6.0",
		"eslint-plugin-prettier": "^4.2.1",
		"husky": "^8.0.3",
		"lint-staged": "^13.1.0",
		"prettier": "^2.8.2",
		"type-fest": "^3.5.1",
		"typescript": "^5.0.0",
		"vitest": "^0.27.1"
	},
	"engines": {
		"node": ">=14.16"
	}
}
